<h1>Listing bowlers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Starting lane</th>
      <th>Paid</th>
      <th>Rejected</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bowlers.each do |bowler| %>
      <tr>
        <td><%= bowler.name %></td>
        <td><%= bowler.starting_lane %></td>
        <td><%= bowler.paid %></td>
        <td><%= bowler.rejected %></td>
        <td><%= link_to 'Show', bowler %></td>
        <td><%= link_to 'Edit', edit_bowler_path(bowler) %></td>
        <td><%= link_to 'Destroy', bowler, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

